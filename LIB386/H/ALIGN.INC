d_align		macro   a:REQ

		org	($+a-1) AND NOT (a-1)

        	endm


;----------------------------------------------------------------------------
c_align		macro   a:REQ
		local	x, y
x:
		d_align	a
y:
		org	x

		rept	(y-x)

		nop

		endm

		org	y

	        endm

